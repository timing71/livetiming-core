[Unit]
Description=Crossbar.io
After=network.target

[Service]
Type=simple
StandardInput=null
StandardOutput=journal
StandardError=journal
WorkingDirectory=/home/james/workspace/livetiming/crossbar/
ExecStart=/opt/crossbar/bin/crossbar start --cbdir=/home/james/workspace/livetiming/crossbar/ --logdir /var/log/crossbar --logtofile
Restart=on-abort
EnvironmentFile=/home/james/workspace/livetiming/livetiming.env

[Install]
WantedBy=multi-user.target
