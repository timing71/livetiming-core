{
  "version": 2,
  "controller": {
    "id": "livetiming"
  },
  "workers": [
    {
      "type": "router",
      "options": {
          "pythonpath": [
              ".",
              ".."
          ]
      },
      "realms": [
        {
          "name": "timing",
          "roles": [
            {
              "name": "authenticator",
              "permissions": [
                {
                  "uri": "livetiming.authenticate",
                  "match": "exact",
                  "allow": {
                    "call": false,
                    "register": true,
                    "publish": false,
                    "subscribe": false
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  }
                }
              ]
            },
            {
              "name": "services",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  }
                }
              ]
            },
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "websocket",
          "endpoint": {
            "type": "tcp",
            "port": 8081
          },
          "auth": {
            "wampcra": {
              "type": "dynamic",
              "authenticator": "livetiming.authenticate"
            },
            "anonymous": {
              "type": "static",
              "role": "anonymous"
            }
          }
        },
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "call": {
              "type": "caller",
              "realm": "timing",
              "role": "anonymous"
            }
          }
        }
      ],
      "components": [
        {
          "type": "class",
          "classname": "authenticator.AuthenticatorSession",
          "realm": "timing",
          "role": "authenticator"
        },
        {
          "type": "class",
          "classname": "livetimingrelay.RelayMonitor",
          "realm": "timing",
          "role": "services"
        },
        {
          "type": "class",
          "classname": "livetiming.directory.Directory",
          "realm": "timing",
          "role": "services"
        },
        {
          "type": "class",
          "classname": "livetiming.dvr.DVRSession",
          "realm": "timing",
          "role": "services"
        }
      ]
    }
  ]
}
